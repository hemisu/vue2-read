// jsconfig.json
{
  "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./",
      "paths": {
        "vue/*": ["src/platforms/web/entry-runtime-with-compiler/*"],
        "compiler/*": ["src/compiler/*"],
        "core/*": ["src/core/*"],
        "shared/*": ["src/shared/*"],
        "web/*": ["src/platforms/web/*"],
        "weex/*": ["src/platforms/weex/*"],
        "server/*": ["src/server/*"],
        "sfc/*": ["src/sfc/*"],
      }
  }
}